<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_splashscreen"
    android:orientation="vertical"
    tools:context=".SplashScreen">


    <ImageView
        android:id="@+id/bubble_splash1"
        android:layout_width="404dp"
        android:layout_height="404dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-108dp"
        android:layout_marginTop="-193dp"
        android:src="@drawable/bubble_splash1" />

    <ImageView
        android:id="@+id/bubble_splash2"
        android:layout_width="259dp"
        android:layout_height="259dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="-119dp"
        android:src="@drawable/bubble_splash1" />

    <ImageView
        android:id="@+id/pasolle"
        android:layout_width="150dp"
        android:layout_height="95dp"
        android:layout_below="@+id/bubble_splash1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-90dp"
        android:src="@drawable/pasolle" />

    <ImageView
        android:id="@+id/pasolle_lontara"
        android:layout_width="149dp"
        android:layout_height="47dp"
        android:layout_below="@+id/pasolle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="66dp"
        android:src="@drawable/pasolle_lontara" />

    <TextView
        android:id="@+id/header_splash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/header_splash"
        android:layout_below="@id/pasolle_lontara"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:textStyle="bold" />
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/header_splash"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        app:lottie_autoPlay="true"
        app:lottie_colorFilter="@color/colorPrimaryDark"
        app:lottie_fileName="loader02.json"
        app:lottie_loop="true"
        app:lottie_speed="2" />


    <ImageView
        android:id="@+id/bubble"
        android:layout_width="62dp"
        android:layout_height="51dp"
        android:layout_below="@+id/bubble_splash2"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="6dp"
        android:src="@drawable/buble_splash" />

    <ImageView
        android:id="@+id/logo_sulsel"
        android:layout_width="261dp"
        android:layout_height="255dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-15dp"
        android:layout_marginBottom="-20dp"
        android:src="@drawable/logo_sulsel_splash" />

    <ImageView
        android:layout_width="240dp"
        android:layout_height="234dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-40dp"
        android:layout_marginBottom="-60dp"
        android:src="@drawable/koper_splash"/>
</RelativeLayout>